<div class="modal fade"
     id="staticBackdrop"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="staticBackdropLabel">Modal title</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!--                // making sure that the current user does not review themselfes-->
                <div class="form-check">
                    <form action="#" id="reviewListForm">
                        <% for(employee of employees){ %>
                            <% if(employee.name != userp.name){ %>
                                <input class="form-check-input"
                                       type="checkbox"
                                       value="<%= employee.id %>"
                                       id="flexCheckDefault"
                                       name="checkedVa">
                                <input type="hidden" value="<%=userp.id%>" name="userRequest">
                                <label class="form-check-label"
                                       for="flexCheckDefault">
                                    <%= employee.name %>
                                </label>
                            <% } %>

                        <% } %>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                        id="reviewList">Submit
                </button>
                <button type="button"
                        class="btn btn-primary">Understood
                </button>
            </div>
        </div>
    </div>
</div>