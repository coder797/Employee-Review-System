
<div class="container mt-2">


    <form action="/user/create"
          method="post">
        <div class="row">


            <!-- Email input -->
            <div class="col-4">
                <div class="form-outline mb-4">
                    <label class="form-label"
                           for="form2Example1">Email address</label>
                    <input type="email"
                           id="form2Example1"
                           class="form-control"
                           name="email"/>

                </div>
            </div>
        </div>
        <div class="row">
            <!-- Password input -->
            <div class="col-4">
                <div class="form-outline mb-4">
                    <label class="form-label"
                           for="form2Example2">Password</label>
                    <input type="password"
                           id="form2Example2"
                           class="form-control"
                           name="password"/>

                </div>
            </div>
        </div>
        <!-- Submit button -->
        <div class="row">
            <div class="col-4">
                <button type="submit"
                        class="btn btn-primary btn-block mb-4">Sign in
                </button>
            </div>
        </div>
        <!-- Register buttons -->

    </form>

</div>
